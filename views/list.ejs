<%- include  header.ejs %>

<!-- The scrollable main view container -->
<main>
  <h2>All books</h2>

  <ul>
    <% for (var i = 0; i < books.length; i++) { %>

      <li>
        <h5><%= books[i].author %></h5>
        <a href="/detail/<%= books[i]._id  %>"><h3><%= books[i].title %></h3></a>
        <p><%= books[i].description %></p>
      </li>

    <% } %>
  </ul>

</main>

